<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/eight"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/two">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/fiftyfive"
            android:layout_height="@dimen/fiftyfive"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="#F5EDFF"
            android:layout_margin="@dimen/three"
            app:cardCornerRadius="@dimen/thirtyfive"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgdrawable"
                android:layout_width="@dimen/forty"
                android:layout_height="@dimen/forty"
                android:layout_gravity="center"
                android:layout_margin="@dimen/two"
                android:padding="@dimen/eight"
                android:src="@drawable/bbps_bill" />

        </androidx.cardview.widget.CardView>

        <me.grantland.widget.AutofitTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:minLines="1"
            android:text="itemname"
            android:textColor="@color/black"
            android:textSize="@dimen/ts_twelve" />
    </LinearLayout>
</RelativeLayout>