<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-50dp"
    android:layout_marginBottom="-50dp"
    android:background="@drawable/img_bg"
    tools:context=".ActivitySplash">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/include_connection"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="@dimen/dp_320"
                    android:layout_height="@dimen/dp_420"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/dp_280"
                    android:background="@drawable/img_intro_shape">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_30"
                            android:orientation="vertical">

                            <pl.droidsonroids.gif.GifImageView
                                android:layout_width="@dimen/dp_250"
                                android:layout_height="@dimen/dp_200"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_marginRight="@dimen/dp_20"
                                android:src="@drawable/img_intro_bg"
                                tools:ignore="MissingClass" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Just 1 Click"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/sp_18" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Split Your Bill"
                                    android:textColor="@color/darkcolorPrimary"
                                    android:textSize="@dimen/sp_22" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_get_start"
                                android:layout_width="@dimen/dp_140"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@drawable/btn_half_round"
                                android:orientation="horizontal">

                                <TextView
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:background="@android:color/transparent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:gravity="center"
                                    android:layout_marginRight="@dimen/dp_3"
                                    android:text="Get Started"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_15"/>
                                <ImageView
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_forward_arrow"></ImageView>
                            </LinearLayout>

                        </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical"
                android:src="@drawable/logo"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>