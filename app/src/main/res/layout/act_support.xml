<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityUpgrade">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/include_connection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3c3c3c"
            android:padding="@dimen/twenty" />

        <include
            android:id="@+id/lay_actionbar"
            layout="@layout/include_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3c3c3c"
            android:padding="@dimen/twenty" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lay_actionbar"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_callcompany"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginTop="@dimen/fifty"
                android:layout_marginRight="@dimen/fifteen"
                android:background="@drawable/back_edittext_login"
                android:backgroundTint="@color/colorPrimary"
                android:drawableLeft="@drawable/support_small"
                android:drawableTint="@color/white"
                android:drawableTintMode="@color/white"
                android:drawablePadding="@dimen/ten"
                android:padding="@dimen/seven"
                android:textColor="@color/white"
                android:text="Contact to Company"
                android:textSize="@dimen/fifteen" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_callsponsor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty"
                android:layout_below="@+id/btn_callcompany"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginTop="@dimen/twentyfive"
                android:layout_marginBottom="@dimen/twentyfive"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/fifteen"
                android:background="@drawable/back_edittext_login"
                android:backgroundTint="@color/colorPrimary"
                android:drawableLeft="@drawable/phonecall"
                android:drawablePadding="@dimen/ten"
                android:padding="@dimen/seven"
                android:text="Contact to Sponsor"
                android:textSize="@dimen/fifteen" />

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_transactionpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_callsponsor"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginBottom="@dimen/twentyfive"
                android:visibility="invisible"
                app:cardCornerRadius="@dimen/ts_fifteen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.45">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="25dp"
                    android:background="#ffffff"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.64">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/forget"
                        android:backgroundTint="@color/colorPrimary"
                        android:padding="@dimen/fifteen"
                        android:src="@drawable/ic_baseline_lock_24"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/numberone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="20.0dip"
                        android:background="@drawable/back_edittext_default"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/colorPrimary"
                        android:elevation="1dp"
                        android:gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:text="number one"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/numbertwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="20.0dip"
                        android:background="@drawable/back_edittext_default"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/colorPrimary"
                        android:elevation="1dp"
                        android:gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:text="number two"
                        android:textColor="@color/colorPrimary" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>