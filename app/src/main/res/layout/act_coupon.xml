<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/include_connection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/twenty" />

        <include
            android:id="@+id/lay_actionbar"
            layout="@layout/include_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3c3c3c"
            android:padding="@dimen/twenty" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/lay_actionbar"

                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lay_kycform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/spacing_medium">



            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_accounteedetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:visibility="visible"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#ffffff"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.64">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textSize="@dimen/twentyfive"
                        android:text="Purchase Token"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="25dp"
                         />


                    <EditText
                        android:id="@+id/edt_loginid"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="20.0dip"
                        android:background="#ffffff"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="PSA LoginID"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:singleLine="true"
                        android:textColor="@color/c_black"
                        android:textColorHighlight="@color/white"
                        android:textColorHint="@color/c_gray2"
                        android:textSize="@dimen/ts_seventeen" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:background="@color/c_gray2" />


                    <EditText
                        android:id="@+id/edt_couponlist"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginTop="9dp"
                        android:layout_marginRight="20.0dip"
                        android:background="#ffffff"
                        android:drawableTint="@color/colorPrimary"

                        android:hint="No. of Coupon"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:singleLine="true"
                        android:textColor="@color/c_black"
                        android:textColorHighlight="@color/white"
                        android:textColorHint="@color/c_gray2"
                        android:textSize="@dimen/ts_seventeen" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:background="@color/c_gray2" />


                    <EditText
                        android:visibility="gone"
                        android:id="@+id/edt_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginTop="9dp"
                        android:layout_marginRight="20.0dip"
                        android:background="#ffffff"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/colorPrimary"

                        android:hint="E-mail"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:singleLine="true"
                        android:textColor="@color/c_black"
                        android:textColorHighlight="@color/white"
                        android:textColorHint="@color/c_gray2"
                        android:textSize="@dimen/ts_seventeen" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:background="@color/c_gray2" />


                    <EditText
                        android:visibility="gone"
                        android:id="@+id/edt_mobilenumber"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginTop="9dp"
                        android:layout_marginRight="20.0dip"
                        android:background="#ffffff"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/colorPrimary"

                        android:hint="Mobile Number"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:singleLine="true"
                        android:textColor="@color/c_black"
                        android:textColorHighlight="@color/white"
                        android:textColorHint="@color/c_gray2"
                        android:textSize="@dimen/ts_seventeen" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:background="@color/c_gray2" />

                    <EditText
                        android:visibility="gone"
                        android:id="@+id/edt_message"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginTop="@dimen/ten"
                        android:layout_marginRight="20.0dip"
                        android:background="@drawable/back_edittext_noborder_dark"
                        android:paddingLeft="10dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:singleLine="true"
                        android:textColor="@color/c_black"
                        android:textColorHighlight="@color/white"
                        android:textColorHint="@color/c_gray2"
                        android:textSize="@dimen/ts_seventeen"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/colorPrimary"

                        android:hint="Message"
                        android:inputType="text"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:background="@color/c_gray2" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:background="@color/c_gray2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="3.0dip"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:weightSum="2"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/btn_submitcontact"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/fortyfive"
                            android:layout_gravity="left"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/blue_button_background"
                            android:backgroundTint="@color/colorPrimary"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Submit"
                            android:textColor="#ffffffff" />

                        <Button
                            android:id="@+id/btn_cancel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/blue_button_background"
                            android:backgroundTint="@color/c_orange"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Cancel"
                            android:textColor="#ffffffff" />
                    </LinearLayout>

                </LinearLayout>
                </androidx.cardview.widget.CardView>
            </ScrollView>
                </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>