<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five"
        android:visibility="visible"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five">

            <ImageView
                android:id="@+id/img_ruppe_symbol"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/five"
                android:layout_marginRight="@dimen/ts_ten"
                android:src="@drawable/icon_rupee"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/offerPrice"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten"
                android:layout_toLeftOf="@+id/lay_amount"
                android:layout_toRightOf="@+id/img_ruppe_symbol"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/ts_fifteen" />

            <TextView
                android:id="@+id/offerdesc"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/offervalidity"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/offerPrice"
                android:textColor="@color/black"
                android:textSize="@dimen/ts_fifteen" />

            <TextView
                android:id="@+id/offervalidity"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/ts_fifteen" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

